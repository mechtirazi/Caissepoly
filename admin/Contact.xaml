<Window x:Class="CaissePoly.admin.Contact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaissePoly.admin"
        mc:Ignorable="d"
        Title="Contact" Height="450" Width="800">

    <Window.Resources>
        <!-- Gradient Background Brush -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Container Background -->
        <SolidColorBrush x:Key="ContainerBackground" Color="#1AFFFFFF"/>

        <!-- Colors -->
        <SolidColorBrush x:Key="YellowColor" Color="#F4D03F"/>
        <SolidColorBrush x:Key="DarkYellowColor" Color="#D1AC13"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#DDDDDD"/>

        <!-- Button Style -->
        <Style x:Key="ReturnButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource YellowColor}"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2" ShadowDepth="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkYellowColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,25"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="6" Opacity="0.5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Foreground" Value="{StaticResource LightGrayColor}"/>
            <Setter Property="LineHeight" Value="27"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Contact Info Style -->
        <Style x:Key="ContactInfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="LineHeight" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Contact Label Style -->
        <Style x:Key="ContactLabelStyle" TargetType="Run">
            <Setter Property="Foreground" Value="{StaticResource YellowColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Social Icon Style -->
        <Style x:Key="SocialIconStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource YellowColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20,40">
            <!-- Main Container -->
            <Border Background="{StaticResource ContainerBackground}"
                    CornerRadius="15"
                    Padding="40,30"
                    MaxWidth="700"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="25" Opacity="0.3" ShadowDepth="8"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!-- Return Button -->
                    <Button Content="← RETOUR" 
                            Style="{StaticResource ReturnButtonStyle}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="-20,-10,0,0" Click="Button_Click"/>

                    <!-- Main Content -->
                    <StackPanel Margin="0,40,0,3996">
                        <!-- Title -->
                        <TextBlock Text="Contact PolySoft &amp; CO" Style="{StaticResource TitleStyle}"/>

                        <!-- Description -->
                        <TextBlock Style="{StaticResource DescriptionStyle}">
                            PolySoft &amp; CO est votre partenaire de confiance pour toutes vos solutions logicielles. 
                            Notre équipe dédiée est à votre écoute pour vous accompagner et répondre à vos besoins.
                        </TextBlock>

                        <!-- Contact Information -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Style="{StaticResource ContactInfoStyle}">
                                <Run Style="{StaticResource ContactLabelStyle}">Téléphone :</Run>
                                <Run Text="      +219 94 989 824"/>
                            </TextBlock>

                            <TextBlock Style="{StaticResource ContactInfoStyle}">
                                <Run Style="{StaticResource ContactLabelStyle}">Email :</Run>
                                <Run Text="             contact@polysoft&amp;co.com"/>
                            </TextBlock>

                            <TextBlock Style="{StaticResource ContactInfoStyle}">
                                <Run Style="{StaticResource ContactLabelStyle}">Adresse :</Run>
                                <Run Text="        Rue Tunis, Sfax, Tunisie"/>
                            </TextBlock>

                            <TextBlock Style="{StaticResource ContactInfoStyle}">
                                <Run Style="{StaticResource ContactLabelStyle}">Horaires :</Run>
                                <Run Text="        Lun - Ven : 9h00 - 18h00"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Social Icons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                            <Button Style="{StaticResource SocialIconStyle}" 
                                    Content="📘" 
                                    ToolTip="Facebook"
        />

                            <Button Style="{StaticResource SocialIconStyle}" 
                                    Content="🐦" 
                                    ToolTip="Twitter"
                                    />

                            <Button Style="{StaticResource SocialIconStyle}" 
                                    Content="💼" 
                                    ToolTip="LinkedIn"
                                   />

                            <Button Style="{StaticResource SocialIconStyle}" 
                                    Content="📷" 
                                    ToolTip="Instagram"
                                    />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
