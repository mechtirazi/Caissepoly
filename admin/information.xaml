<Window x:Class="CaissePoly.admin.information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaissePoly.admin"
        mc:Ignorable="d"
        Title="information" Height="800" Width="800">


        <Window.Resources>
            <!-- Gradient Background Brush -->
            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>

            <!-- Header Background Brush -->
            <SolidColorBrush x:Key="HeaderBackground" Color="#40000000"/>

            <!-- Info Container Background -->
            <SolidColorBrush x:Key="InfoContainerBackground" Color="#1EFFFFFF"/>

            <!-- Info Section Background -->
            <SolidColorBrush x:Key="InfoSectionBackground" Color="#14FFFFFF"/>
            <SolidColorBrush x:Key="InfoSectionHoverBackground" Color="#1EFFFFFF"/>

            <!-- Colors -->
            <SolidColorBrush x:Key="GoldColor" Color="#FFD700"/>
            <SolidColorBrush x:Key="YellowColor" Color="#F1C40F"/>
            <SolidColorBrush x:Key="DarkYellowColor" Color="#D4AC0D"/>

            <!-- Button Style -->
            <Style x:Key="BackButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource YellowColor}"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="25,12"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#F1C40F" BlurRadius="15" Opacity="0.3" ShadowDepth="4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource DarkYellowColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Info Section Style -->
            <Style x:Key="InfoSectionStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource InfoSectionBackground}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,30"/>
                <Setter Property="BorderBrush" Value="{StaticResource GoldColor}"/>
                <Setter Property="BorderThickness" Value="4,0,0,0"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.15" ShadowDepth="5"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Header Style -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource GoldColor}"/>
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>

            <!-- Content Style -->
            <Style x:Key="ContentTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="LineHeight" Value="27"/>
                <Setter Property="Opacity" Value="0.95"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <!-- Hyperlink Style -->
            <Style x:Key="HyperlinkStyle" TargetType="Hyperlink">
                <Setter Property="Foreground" Value="{StaticResource YellowColor}"/>
                <Setter Property="TextDecorations" Value="None"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="TextDecorations" Value="Underline"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Header -->
                <Border Background="{StaticResource HeaderBackground}" Padding="20,25">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="6" Opacity="0.4" ShadowDepth="2"/>
                    </Border.Effect>
                    <TextBlock Text="Informations sur la Caisse"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="6" Opacity="0.4" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <!-- Info Container -->
                <Border Background="{StaticResource InfoContainerBackground}"
                        CornerRadius="20"
                        Padding="35"
                        Margin="50,50,50,0"
                        MaxWidth="850">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="35" Opacity="0.25" ShadowDepth="12"/>
                    </Border.Effect>

                    <StackPanel>
                        <!-- Cassti Section -->
                        <Border Style="{StaticResource InfoSectionStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource GoldColor}" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" Opacity="0.5"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Cassti" Style="{StaticResource SectionHeaderStyle}"/>
                                </StackPanel>
                                <TextBlock Text="Caisse tactile intelligente pour la gestion complète du stock et des ventes - Version 1.0"
                                           Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Développé par Section -->
                        <Border Style="{StaticResource InfoSectionStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource GoldColor}" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" Opacity="0.5"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Développé par" Style="{StaticResource SectionHeaderStyle}"/>
                                </StackPanel>
                                <TextBlock Text="Polysoft &amp; Co - Solutions logicielles innovantes"
                                           Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Site web Section -->
                        <Border Style="{StaticResource InfoSectionStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource GoldColor}" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" Opacity="0.5"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Site web" Style="{StaticResource SectionHeaderStyle}"/>
                                </StackPanel>
                                <TextBlock Style="{StaticResource ContentTextStyle}">
                                    <Hyperlink NavigateUri="https://www.polysoft.com" Style="{StaticResource HyperlinkStyle}">
                                        www.polysoft.com
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Fonctionnalités principales Section -->
                        <Border Style="{StaticResource InfoSectionStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource GoldColor}" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" Opacity="0.5"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Fonctionnalités principales" Style="{StaticResource SectionHeaderStyle}"/>
                                </StackPanel>
                                <TextBlock Text="Interface tactile intuitive • Gestion des stocks en temps réel • Système de facturation intégré • Rapports détaillés • Sauvegarde automatique"
                                           Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Support technique Section -->
                        <Border Style="{StaticResource InfoSectionStyle}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="{StaticResource GoldColor}" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <Ellipse.Effect>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="10" Opacity="0.5"/>
                                        </Ellipse.Effect>
                                    </Ellipse>
                                    <TextBlock Text="Support technique" Style="{StaticResource SectionHeaderStyle}"/>
                                </StackPanel>
                                <TextBlock Text="Assistance disponible 24h/7j • Documentation complète • Formation utilisateurs • Mises à jour gratuites"
                                           Style="{StaticResource ContentTextStyle}"/>
                            </StackPanel>
                        </Border>

                        <!-- Back Button -->
                        <Button Content="← Retour au menu"
                                Style="{StaticResource BackButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="0,25,0,0"
                                Click="BackButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
