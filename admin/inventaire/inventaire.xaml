<Window x:Class="CaissePoly.admin.inventaire.inventaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaissePoly.admin.inventaire"
        mc:Ignorable="d"
        Title="inventaire" 
        Height="600" 
        Width="1000"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
            <!-- Gradient Brushes -->
            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="TileGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2980b9" Offset="0"/>
                <GradientStop Color="#3498db" Offset="1"/>
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ffffff33" Offset="0"/>
                <GradientStop Color="#ffffff55" Offset="1"/>
            </LinearGradientBrush>

            <!-- Styles -->
            <Style x:Key="TileButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource TileGradient}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Height" Value="140"/>
                <Setter Property="Width" Value="180"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                x:Name="border">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                Direction="315" 
                                                ShadowDepth="8" 
                                                BlurRadius="25" 
                                                Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" 
                                                        Direction="315" 
                                                        ShadowDepth="12" 
                                                        BlurRadius="35" 
                                                        Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                <TranslateTransform Y="-8"/>
                                            </TransformGroup>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                            </TransformGroup>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            </Style>

            <Style x:Key="BackButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                x:Name="border">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                Direction="315" 
                                                ShadowDepth="4" 
                                                BlurRadius="10" 
                                                Opacity="0.3"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            </Style>

            <Style x:Key="TitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="35"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,30,0,30"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" 
                                    Direction="315" 
                                    ShadowDepth="2" 
                                    BlurRadius="4" 
                                    Opacity="0.3"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

        <Grid Background="{StaticResource BackgroundGradient}">
            <!-- Back Button -->
            <Button x:Name="BackButton" 
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,20,0,0"
                Click="BackButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="←" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Retour" FontSize="14"/>
                </StackPanel>
            </Button>

            <!-- Main Content -->
            <StackPanel Margin="0,80,0,0">
                <!-- Title -->
                <TextBlock Text="Gestion de l'Inventaire" 
                      Style="{StaticResource TitleStyle}"/>

                <!-- Tiles Grid -->
                <WrapPanel HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Margin="50">

                    <!-- Liste des Articles -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Liste des Articles" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Ajouter un Article -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="➕" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Ajouter un Article" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Supprimer un Article -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="🗑️" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Supprimer un Article" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Bon d'Entrée et de Sortie -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="📋" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Bon d'Entrée et de sortie" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Rapport d'Inventaire -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="📊" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Rapport d'Inventaire" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Paramètres -->
                    <Button Style="{StaticResource TileButtonStyle}">
                        <StackPanel>
                            <TextBlock Text="⚙️" FontSize="36" Margin="0,0,0,10"/>
                            <TextBlock Text="Paramètres" 
                                  TextWrapping="Wrap" 
                                  TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </WrapPanel>
            </StackPanel>
        </Grid>
    
</Window>
