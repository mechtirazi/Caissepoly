<Window x:Class="CaissePoly.admin.FicheUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:CaissePoly.ViewModel"
        xmlns:components="clr-namespace:CaissePoly.Componnents"
        mc:Ignorable="d"
        Title="FicheUtilisateur"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

        <Grid Background="#FFFDF1DC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- BarreNavigation -->
                <RowDefinition Height="Auto"/>
                <!-- Titre -->
                <RowDefinition Height="*"/>
                <!-- Contenu principal -->
                <RowDefinition Height="Auto"/>
                <!-- Boutons -->
            </Grid.RowDefinitions>

            <components:BarreNavigation Grid.Row="0"/>

            <Border Grid.Row="1" Background="#A9D0F5" Padding="10">
                <TextBlock Text="FICHE UTILISATEUR" FontSize="18" FontWeight="Bold"
                       Foreground="#2C3E50" HorizontalAlignment="Center"/>
            </Border>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Formulaire à gauche -->
                <StackPanel Grid.Column="0" Margin="10">
                    <Label Content="ID" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.idU}" IsEnabled="False" Margin="0,0,0,10"/>

                    <Label Content="Nom d'utilisateur" FontWeight="Bold"/>
                    <TextBox Text="{Binding SelectedUser.nomU}" Margin="0,0,0,10"/>

                    <Label Content="Mot de passe" FontWeight="Bold"/>
                <PasswordBox helper:PasswordBoxHelper.BoundPassword="{Binding SelectedUser.MP, Mode=TwoWay}" />
                <Label Content="Rôle" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedUser.Role}" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Liste des utilisateurs à droite -->
                <Grid Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Barre de recherche -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                        <Button Content="🔍" Command="{Binding SearchCommand}" Width="80" Margin="10,0"/>
                        <TextBlock Text="{Binding FilteredUsers.Count, StringFormat='{}{0} utilisateurs'}"
                               VerticalAlignment="Center" Foreground="#64748B"/>
                    </StackPanel>

                    <!-- Liste -->
                    <ListView Grid.Row="1"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                          BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding idU}"/>
                                <GridViewColumn Header="Nom" Width="150" DisplayMemberBinding="{Binding nomU}"/>
                                <GridViewColumn Header="Rôle" Width="100" DisplayMemberBinding="{Binding Role}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>

            <!-- Boutons -->
            <Border Grid.Row="3" Background="#ECF0F1" Padding="10" BorderThickness="0,1,0,0" BorderBrush="#BDC3C7">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Nouveau" Width="120" Height="35" Margin="5"
                        Command="{Binding NewUserCommand}"
                        Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Sauvegarder" Width="120" Height="35" Margin="5"
                        Command="{Binding SaveUserCommand}"
                        Background="#2ECC71" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Supprimer" Width="120" Height="35" Margin="5"
                        Command="{Binding DeleteUserCommand}"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Fermer" Width="120" Height="35" Margin="5"
                        Command="{Binding CloseCommand}"
                        Background="#95A5A6" Foreground="White" FontWeight="Bold" Click="Button_Click"/>
                </StackPanel>
            </Border>
        </Grid>

</Window>
