<UserControl x:Class="CaissePoly.Componnents.FamilleList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaissePoly.Componnents"
               xmlns:localConv="clr-namespace:CaissePoly.ViewModel.Converters"
              xmlns:localc="clr-namespace:CaissePoly.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <localConv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
  
    <Grid Margin="10">
        <!-- 2 colonnes : Articles à gauche, Familles à droite -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- SECTION ARTICLES (à gauche) -->
        <Border Grid.Column="0"
                BorderThickness="1"
                BorderBrush="DarkGray"
                Padding="10"
                Margin="5"
                CornerRadius="10"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ArticleItems"
                              ItemsSource="{Binding ArticlesParFamille}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding designation}"
                          Command="{Binding DataContext.SelectArticleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"

                        CommandParameter="{Binding}"
                        BorderThickness="1"
                        BorderBrush="Gray"
                        Padding="10"
                        Margin="5"
                        Background="#FFF9F9F9"
                        FontWeight="Normal"
                        HorizontalContentAlignment="Left" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- SECTION FAMILLES (à droite) -->
        <Border Grid.Column="1"
                BorderThickness="1"
                BorderBrush="DarkGray"
                Padding="10"
                Margin="5"
                CornerRadius="10">
            <StackPanel>
                <Button Content="Familles"
        FontWeight="Bold"
        FontSize="16"
        Margin="0,0,0,10"
        Height="40"
        Background="#FFEEEEEE"
        Command="{Binding AfficherFamillesCommand}" />


                <ListBox x:Name="FamilleListBox"
         ItemsSource="{Binding Familles}"
         SelectedItem="{Binding SelectedFamille, Mode=TwoWay}" Visibility="{Binding AfficherFamilles, Converter={StaticResource BoolToVisibilityConverter}}"
         Height="500">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding nomF}"
                FontWeight="Bold"
                FontSize="16"
                Margin="0,0,0,10"
                Height="40"
                Background="#FFEEEEEE"
                Command="{Binding DataContext.SelectFamilleCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                CommandParameter="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
