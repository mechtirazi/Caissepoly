<UserControl x:Class="CaissePoly.Componnents.NumeroTicketPrix"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">

    <Grid Background="#F8FAFC"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header section -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
            <TextBlock Text="N° Ticket :" 
                       FontWeight="SemiBold" 
                       FontSize="20"
                       Foreground="#1E293B"
                       VerticalAlignment="Center"/>

            <ComboBox Width="180" 
                      Height="40"
                      FontSize="16"
                      ItemsSource="{Binding ListeTickets}"
                      SelectedItem="{Binding SelectedTicket, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEditable="True"
                      Background="White"
                      BorderBrush="#E2E8F0"
                      Foreground="#0F172A"
                      Padding="4"
                      Margin="5 0" SelectionChanged="ComboBox_SelectionChanged"
                      />
        </StackPanel>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Paiement Text -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#CBD5E1"
                    CornerRadius="10"
                    Padding="16"
                    Margin="0 0 10 0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Paiement"
                               FontSize="14"
                               Foreground="#64748B"
                               FontWeight="Medium"/>
                    <TextBlock Text="{Binding Paiement}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2563EB"/>
                </StackPanel>
            </Border>

            <!-- Total Ticket -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#CBD5E1"
                    CornerRadius="10"
                    Padding="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Total" 
                               FontSize="14" 
                               Foreground="#64748B"
                               FontWeight="Medium"/>
                    <TextBlock Text="{Binding TotalTicket, StringFormat={}{0:F3} DT}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#10B981"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
