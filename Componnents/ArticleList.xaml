<UserControl x:Class="CaissePoly.Componnents.ArticleList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewmodel="clr-namespace:CaissePoly.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">

    <Grid Margin="10">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Bouton pour afficher tous les articles -->
        <Button Content="Afficher tous les articles"
                Command="{Binding ResetArticlesCommand}"
                Margin="0,0,0,10"
                Width="200"
                Height="30"
                HorizontalAlignment="Left" />
        <TextBlock Text="{Binding FilteredArticles.Count}" FontSize="16" Foreground="Red" Margin="5"/>


        <!-- Liste des articles filtrés -->
        <ListView ItemsSource="{Binding FilteredArticles}"
              SelectedItem="{Binding SelectedArticle, Mode=TwoWay}"
                  Grid.Row="1"
                  Margin="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Désignation" Width="200" DisplayMemberBinding="{Binding designation}" />
                    <GridViewColumn Header="Qté" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding quantiteVente}" Width="70" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="P.U" Width="80" DisplayMemberBinding="{Binding prixunitaire}" />
                    <GridViewColumn Header="Total" Width="80" DisplayMemberBinding="{Binding Total}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
