<UserControl x:Class="CaissePoly.Views.CaisseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CaissePoly.Views"
             xmlns:components="clr-namespace:CaissePoly.Componnents"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000"
             Background="#fafbfc"
             Unloaded="UserControl_Unloaded">

    
    <Grid>

        <!-- Structure en 3 lignes et 2 colonnes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne 1: En-tête -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 2: (vide) -->
            <RowDefinition Height="*"/>
            <!-- Ligne 3: Contenu principal -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Colonne 1 -->
            <ColumnDefinition Width="*"/>
            <!-- Colonne 2 -->
        </Grid.ColumnDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="#E8E9EA"
                BorderBrush="#D1D5DB"
                BorderThickness="0,0,0,1"
                Padding="0">
            <components:BarreNavigation Height="50" Loaded="BarreNavigation_Loaded"/>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="10,5,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des articles -->
            <Border Grid.Row="0" Grid.Column="0"
                    Margin="0,0,10,10"
                    Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="5">
                <components:ArticleList DataContext="{Binding}"/>
            </Border>

            <!-- Familles et boutons -->
            <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                        VerticalAlignment="Stretch">

                <!-- Barre de recherche -->
                <Border Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,0,10"
                        Padding="10">
                    <components:SearchBox/>
                </Border>

                <!-- Liste des familles -->
                <Border Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,0,10">
                    <components:FamilleList/>
                </Border>

                <!-- Boutons de fonction -->
                <Border Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>
                </Border>

                <!-- Boutons supplémentaires -->
                <Border Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- NumeroTicketPrix + NumericPad alignés -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0"
                  VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- NumeroTicketPrix -->
                <Border Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,0,10,0"
                        VerticalAlignment="Stretch">
                    <components:NumeroTicketPrix VerticalAlignment="Stretch" />
                </Border>

                <!-- NumericPad -->
                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        VerticalAlignment="Stretch">
                    <components:NumericPad Width="300" VerticalAlignment="Stretch" DataContext="{Binding}"/>
                </Border>
                

            </Grid>
        </Grid>
    </Grid>
</UserControl>